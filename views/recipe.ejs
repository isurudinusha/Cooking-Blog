<% if(recipe != null){%>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
    <li class="breadcrumb-item"><a href="/categories/<%= recipe.category %>"><%= recipe.category %></a></li>
    <li class="breadcrumb-item active" aria-current="page">
      <%= recipe.name %>
    </li>
  </ol>
</nav>

<!-- Buttton for delete recipe in the right corner -->

<div class="d-flex justify-content-center justify-content-lg-end">
  <button type="button" class="btn btn-primary btn-sm mx-2 mb-3">
    Update Recipe
  </button>
  <button type="button" class="btn btn-danger btn-sm float-lg-end mx-2 mb-3" style="vertical-align: top;" data-bs-toggle="modal" data-bs-target="#deleteModal">
    Delete Recipe
  </button>
  
</div>

<div class="row">
  <div class="col-12 col-md-4">
    <img
      src="/uploads/<%= recipe.image %>"
      class="img-fluid rounded fade-in-left"
      alt="<%= recipe.name %>"
      loading="lazy"
    />
  </div>
  <div class="col-12 col-md-8">
    <div class="row">
      <div class="col-12">
        <h1><%= recipe.name %></h1>
      </div>
      <div class="col-12"><i class="bi bi-tag"></i> <%= recipe.category %></div>
    <div class="col-12" style="white-space: pre-line; ">
<h4>Cooking Instructions</h4>
<%= recipe.description.trim() %>
        </div>
    </div>

    <div class="row pt-4">
      <div class="col-12">
        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% for(var i = 0; i < recipe.ingredients.length; i++){%>
          <li class="list-group-item"><%= recipe.ingredients[i] %></li>
          <% } %>
        </ul>
      </div>
    </div>

    </div>
  </div>
</div>

<% }else{ %>

    <h2 class="text-center text-danger">Recipe not found.</h2>

<% } %> 

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirmation</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this recipe?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript code to handle the delete button click -->
<script>
  document.getElementById('confirmDelete').addEventListener('click', function() {
    DeleteRecipe();
    var deleteModal = document.getElementById('deleteModal');
    var modal = bootstrap.Modal.getInstance(deleteModal);
    modal.hide();
  });
</script>


<script>
  function DeleteRecipe() {
    var recipeId = "<%= recipe._id %>";
    window.location.href = '/';
    $.ajax({
    url: '/delete-recipe/' + recipeId
    });
  }

  
</script>


